				printf("\n\tEnter Lose Count : ");
    	    	scanf("%d",&Lose[i][3]);
    	    	
				printf("\n\tEnter Draw Count : ");
    	    	scanf("%d",&Draw[i][4]);
    	    	
    	    	Sum[i][j] += Win[i][2];
    	    	Sum[i][j] += Lose[i][3];
    	    	Sum[i][j] += Draw[i][4];
    	    	if(Sum[i][j]<=Match_Results[i][1])
    	    	  {
    	    	  	Score[i][5] += Win[i][2] *3;
    	    	  	Score[i][5] += Draw[i][4] *1;
				  }
				else
				    printf("Value is greater than the number of the play.");
    	    }
    	    system("cls");
		}
	    printf("\n\t\t***************************************\t\t\n");

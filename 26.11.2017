    	{
    		for(int j = 0 ; j <= Play_Count-1 ; j++)
    		{
    		    printf("\n\tEnter Score : ");
    	    	scanf("%d",&Match_Results[i][1]);
    	    	
				printf("\n\tEnter Win Count : ");

	        {
	    	    printf("\n\tTotal\t");
		   	}
		   	else 
			    printf("\n\t Team : %d\t",i+1);
			for(int j = 0 ; j <= Play_Count-1 ; j++)
			  {
			  	printf("     %d",Match_Results[i][1]);
			  	printf("\t          %d",Win[i][2]);
			  	printf("\t  %d",Lose[i][3]);
			  	printf("\t   %d",Draw[i][4]);
			  	printf("\t   %d",Score[i][5]);
			  }
		  }
	    
	    printf("\n------------------------------------");

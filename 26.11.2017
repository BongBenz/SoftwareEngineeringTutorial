#include <stdio.h>
#include <stdlib.h>
#include <iostream>
using namespace std;

  int main(void)
    {
    	int Play_Count = 1;
    	int Team = 1;
    	int Sum[100][100];
    	int Match_Results[Team][Play_Count] = {0};
        int Score[100][100];
		int Win[100][100];
		int Lose[100][100];
		int Draw[100][100]; 
		
    	printf("\n\tEnter Number Of Team : ");
    	scanf("%d",&Team);
